#. type: delimited block -
#: modules/administration/pages/auth-methods-sso.adoc:39
#, no-wrap
msgid "java.sso.onelogin.saml2.sp.assertion_consumer_service.url = https://YOUR-PRODUCT-HOSTNAME-OR-IP/rhn/manager/sso/acs\n"
msgstr "java.sso.onelogin.saml2.sp.assertion_consumer_service.url = https://YOUR-PRODUCT-HOSTNAME-OR-IP/rhn/manager/sso/acs\n"

#. type: Plain text
#: modules/administration/pages/auth-methods-sso.adoc:40
