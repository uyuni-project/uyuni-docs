"{% if grains.osfamily   'RedHat' %}\n"
"  {% set dnscfg   '/etc/named.conf' %}\n"
"{% elif grains.osfamily   'Debian' %}\n"
"  {% set dnscfg   '/etc/bind/named.conf' %}\n"
"{% més %}\n"
