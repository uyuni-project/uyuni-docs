"[<channel_label_1>]\n"
"X-RHUI-ID=<value>\n"
"X-RHUI-SIGNATURE=<value>\n"
msgstr ""
"[<channellabel1>]\n"
"X-RHUI-ID {<value>\n"
"SIGNATURA X-RHUI {<value>\n"

#. type: delimited block -
#: modules/client-configuration/pages/clients-rh-rhui.adoc:79
#, no-wrap
msgid ""
"[<channel_label_2>]\n"
"X-RHUI-ID=<value>\n"
"X-RHUI-SIGNATURE=<value>\n"
msgstr ""
"[<channellabel2>]\n"
"X-RHUI-ID {<value>\n"
"SIGNATURA X-RHUI {<value>\n"

#. type: Plain text
#: modules/client-configuration/pages/clients-rh-rhui.adoc:80
#, no-wrap
msgid ""
"  Replace [literal]``<channel_label_X>`` above with channel names such as "
"[literal]``rhel8-baseos-repo``:\n"
msgstr ""
