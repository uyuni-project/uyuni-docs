#. type: delimited block -
#: modules/client-configuration/pages/registration-cli.adoc:22
#: modules/client-configuration/pages/registration-cli.adoc:41
#, no-wrap
msgid ""
"server_id_use_crc: adler32\n"
"enable_legacy_startup_events: False\n"
"enable_fqdns_grains: False\n"
msgstr ""
"serveridusecrc: adler32\n"
"enablelegacystartupevents: Fals\n"
"enablefqdnsgrains: Fals\n"

#. type: Plain text
#: modules/client-configuration/pages/registration-cli.adoc:23
msgid "Restart the [systemitem]``venv-salt-minion`` service:"
msgstr "Reinicia el servei [systemitem]:venv-salt-minion::"

#. type: delimited block -
#: modules/client-configuration/pages/registration-cli.adoc:24
#, no-wrap
msgid "systemctl restart venv-salt-minion\n"
msgstr "systemctl reinicia venv-salt-minion\n"

#. type: Plain text
#: modules/client-configuration/pages/registration-cli.adoc:25
#: modules/client-configuration/pages/registration-cli.adoc:44
