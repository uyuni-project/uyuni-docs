"              flags: swap\n"
"              format: swap\n"
"              size_MiB: 1000.0\n"
"            p2:\n"
"              image: POS_Image_JeOS6\n"
"              mountpoint: /\n"
"          type: DISK\n"
"  TOSHIBA-6140100:\n"
