msgid "Procedure: Adding Software Channels at the Command Prompt"
msgstr "过程：在命令提示符下添加软件频道"

#. type: Plain text
#: modules/retail/pages/snippets/add_channels_cli.adoc:2
msgid ""
"At the command prompt on the {productname} Server, as root, use the "
"[command]``spacewalk-common-channels`` command to add the appropriate "
"channels:"
msgstr ""
"在 {productname} Server 上的命令提示符下，以 root 身份使用 "
"[command]``spacewalk-common-channels`` 命令添加相应的频道："

#. type: delimited block -
#: modules/retail/pages/snippets/add_channels_cli.adoc:3
#, no-wrap
msgid ""
"spacewalk-common-channels \\\n"
"<base_channel_name> \\\n"
"<child_channel_name_1> \\\n"
"<child_channel_name_2> \\\n"
"... <child_channel_name_n>\n"
msgstr ""
"spacewalk-common-channels \\\n"
"<基础频道名称> \\\n"
"<子频道名称 1> \\\n"
"<子频道名称 2> \\\n"
"... <子频道名称 n>\n"

#. type: Plain text
#: modules/retail/pages/snippets/add_channels_cli.adoc:4
msgid "Synchronize the channels:"
msgstr "同步频道："

#. type: delimited block -
#: modules/retail/pages/snippets/add_channels_cli.adoc:5
#, no-wrap
msgid "mgr-sync refresh --refresh-channels\n"
msgstr "mgr-sync refresh --refresh-channels\n"

