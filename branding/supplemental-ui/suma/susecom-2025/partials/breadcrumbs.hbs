<nav class="breadcrumbs" aria-label="breadcrumbs">
<ul>
    {{#if page.breadcrumbs.[0]}}
      <li>
        {{#if (and page.breadcrumbs.[0].url (eq page.breadcrumbs.[0].urlType 'internal'))}}
          <a href="{{{relativize page.breadcrumbs.[0].url}}}" class="book-link">
            <span class="book-text">{{{page.breadcrumbs.[0].content}}}</span>
            <img class="book-icon" src="{{uiRootPath}}/img/book.svg" alt="Book" width="20" height="20">
          </a>
        {{else}}
          <span class="book-link">
            <span class="book-text">{{{page.breadcrumbs.[0].content}}}</span>
            <img class="book-icon" src="{{uiRootPath}}/img/book.svg" alt="Book" width="20" height="20">
          </span>
        {{/if}}
      </li>
    {{/if}}
  </ul>
</nav>